<h1>New post</h1>

<%= form_for @post, :url=>posts_path(@board), :html => { :multipart => true } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :board_id, '選擇發表類型' %><br />
    <%= select :post, :board_id, Board.all.collect{|p| [p.name,p.id]} %>
  </div>
  <div class="field">
    <%= f.label :upload_image %><br />
    <%= f.file_field :excerpt_image %>
  </div>
  <div class="actions">
    <%= f.submit  %>
  </div>
<% end %>

<%= link_to 'Back', posts_path() %>
